#include <stdio.h>
void main() 
{
    int h=12;
    int m=57;
    int s=57;
    while(1)
    {
        printf("\n\n\t\t %02d : %02d : %02d",h,m,s);
        sleep(1);
        system("cls");
        s=s+1;
        if(s==60)
        {
            s=0;
            m=m+1;
        }
        else if(m==60)
        {
            s=0;
            m=0;
            h=h+1;
        }
        else if(h==12)
        {
            s=0;
            m=0;
            h=0;
        }
